      .sidebar {
        font-family: "Poppins", sans-serif;
        position: fixed;
        top: 0;
        left: 0;
        width: 250px;
        height: 100%;
        background-color: #307fe2;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 30px;
        border-top-right-radius: 15px;
        border-bottom-right-radius: 15px;
        box-shadow: 2px 1px 6px rgb(249, 255, 235);
      }

      .sidebar .logo {
        width: 90%;
        margin-bottom: 5%;
      }

      .sidebar.active {
        width: 100px;
        overflow: hidden;
      }

      .sidebar li {
        list-style: none;
      }

      .sidebar a {
        text-decoration: none;
      }

      .sidebar ul {
        width: 100%;
        margin: 0px;
        padding: 0px;
      }

      .sidebar span {
        margin-right: 15px;
      }

      .sidebar--items a,
      .sidebar--bottom-items a {
        display: flex;
        flex-flow: row;
        align-items: center;
        margin-bottom: 10px;
        font-size: 1.1rem;
        color: #ffffff;
        padding: 7px;
        border-radius: 13px;
      }

      .sidebar--items a:hover,
      .sidebar--bottom-items a:hover {
        background-color: #ff5924;
        color: #0031b9;
      }

      #active--link {
        background-color: #ff5924;
        color: #fff;
      }

      .sidebar--items {
        flex-grow: 0.85;
        /* This makes the navigation items take up the remaining space */
      }
    </style>

